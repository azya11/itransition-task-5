<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Render deployment configuration -->
    <SpaRoot>../book-scribe-generator/</SpaRoot>
    <SpaStaticFilesOutputPath>dist</SpaStaticFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0" />
    <PackageReference Include="CsvHelper" Version="30.0.1" />
    <PackageReference Include="Bogus" Version="35.4.0" />
  </ItemGroup>

  <!-- Render: Automatically build React and copy to wwwroot during publish -->
  <Target Name="CopySpaDist" AfterTargets="Publish">
    <Exec Command="npm ci --prefix $(SpaRoot)" />
    <Exec Command="npm run build --prefix $(SpaRoot)" />
    <ItemGroup>
      <SpaDistFiles Include="$(SpaRoot)dist\**\*" />
    </ItemGroup>
    <Copy SourceFiles="@(SpaDistFiles)"
          DestinationFolder="$(PublishDir)wwwroot\%(RecursiveDir)" />
  </Target>

</Project> 